{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "android",
            "request": "launch",
            "name": "Android: Launch debug APK",
            "appSrcRoot": "${workspaceRoot}/src/main",
            "apkFile": "${workspaceRoot}/build/outputs/apk/debug/app-debug.apk",
            "adbPort": 5037
        },
        {
            "type": "android",
            "request": "attach",
            "name": "Android: Attach to app",
            "appSrcRoot": "${workspaceRoot}/src/main",
            "adbPort": 5037,
            "processId": "${command:PickAndroidProcess}"
        }
    ]
}